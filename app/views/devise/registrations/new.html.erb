<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container">


  <div class="card card-devise">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center"><%= t "pages.sign_up" %></h4>
      <p>
      <%= link_to  t("users.login_via_tw"), user_facebook_omniauth_authorize_path, class:"btn fab fa-facebook btn-block btn-facebook" %>
      <%= link_to  t("users.login_via_vk"), user_vkontakte_omniauth_authorize_path, class:"btn fab fa-vkontakte btn-block btn-vkontakte" %>
        <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> Â  <%= t "users.login_via" %> facebook</a>
      </p>
      <p class="divider-text">
        <span class="bg-light"><%= t "users.or" %></span>
      </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%=  devise_error_messages! %>
      <% render "layouts/alerts"%>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        <% f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control input-lg", placeholder: t("users.username") %>
      </div> <!-- form-group// -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <% f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder:t("users.email") %>
      </div> <!-- form-group// -->

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <% f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control input-lg", placeholder:t("users.psw_size") %>
      </div> <!-- form-group// -->
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <% f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control input-lg", placeholder:t("users.psw_confirm") %>
      </div> <!-- form-group// -->                                      
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> <%= t "users.create" %>  </button>
      </div> <!-- form-group// -->      
      <p class="text-center"> <%= t "users.have_acc" %> <%= link_to t('pages.login'), new_user_session_path %> </p>                                                                 
      <% end %>
    </article>
  </div>
</div>
<% render "devise/shared/links" %>
