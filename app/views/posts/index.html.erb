<div class = "row">
  <div class = "col-sm-10 blog-main">
    <h1>Posts     
      <% if current_user %>    
      <%= link_to 'Create new', new_post_path, class: "btn btn-primary" %>
      <% end %>
    </h1>
    
    <% @posts.each do |post| %> 
    <div class="card w-75">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %>
          <% if current_user && current_user.admin || current_user == post.user %>
          <%= link_to 'Delete', 
             post_path(post), class:"badge badge-danger pull-right", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </h5>
        <p class="card-text"><%= post.description %></p>
        <a href="http://localhost:3000/posts/<%= post.id %>" class="btn btn-info">Show more...</a>
      </div>
      <div class="card-footer">
        Created by <%= link_to post.user.username, post.user  %>
      </div>
    </div>
    <% end %>
  </div>
  <div class = "col-sm-2 blog-sidebar">
    <%= render 'layouts/right'%>
  </div>

</div>
<br>


