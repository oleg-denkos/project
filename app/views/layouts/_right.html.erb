<div class="sidebar-module" align="center">
  <h2><% if current_user %>    
    <div class="row" align="center">
      <%= link_to t('pages.create'), new_post_path, class: "btn btn-primary"%>
      <%= link_to "Change theme", {controller: "users", action: "current_user_theme",id: current_user.id, theme: current_user.theme == "light" ? "dark" : "light" }, class: "btn btn-outline-success btn-sm pull-right" %>
    </div>
    <% end %>
    <br>
  </h2>
  <div class="sidebar-module sidebar-module-inset">
    <div class="card">
      <div class="card-body">
        <div class="card-header"> <h4><%= t "pages.all_tags" %></h4></div>
        <% tag_cloud(Post.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
        <%= link_to tag.name, root_path, :class => css_class %>
        <% end %>
      </div>
    </div>
  </div>
</div>